doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="./styles.css")
        title backend con PUG
    body
      nav
        
        ul
            li 
                a(href="/" class="btn btn-dark") Inicio
            li 
                a(href="/productos" class="btn btn-dark") Productos

      div
        each val in productos
          div
            h3= val.title
            p Precio: #{val.price}
            img(src= `${val.thumbnail}`)
            form(action=`/productos/eliminar/${val.id}` method="post")
              input(type="submit" value="Eliminar")
        